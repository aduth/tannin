{
	"root": true,
	"extends": ["@aduth/eslint-config/es5"],
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"env": {
		"node": true
	},
	"globals": {
		"expect": true
	},
	"rules": {
		"camelcase": "off",
		"eqeqeq": ["error", "smart"]
	},
	"overrides": [
		{
			"files": ["./*", "**/__tests__/**/*", "**/benchmark/*"],
			"extends": ["@aduth/eslint-config"],
			"rules": {
				"no-console": "off",
				"camelcase": "off"
			}
		}
	]
}
